{
  "name": "lightning-g3-skin-sample",
  "version": "0.1.0",
  "main": "Gruntfile.js",
  "author": "YOUR NAME HERE",
  "scripts": {
    "start": "grunt default",
    "readme": "grunt readme",
    "i18n": "grunt i18n",
    "all": "run-p watch",
    "sass": "node-sass --include-path scss _scss/style.scss css/style.css --output-style compressed -w",
    "watch": "npm run sass",
    "composer:install:win": "wp-env run composer \"composer install\"",
    "composer:install:mac": "wp-env run composer 'composer install'",
    "phpunit:win": "wp-env run phpunit \"phpunit -c /var/www/html/wp-content/plugins/lightning-g3-pro-unit/phpunit.xml.dist --verbose\"",
    "phpunit:mac": "wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/lightning-g3-pro-unit/phpunit.xml.dist --verbose'"
  },
  "devDependencies": {
    "@wordpress/env": "^4.0.4",
    "autoprefixer": "^10.2.5",
    "cssnano": "^5.0.4",
    "grunt": "~1.4.0",
    "grunt-wp-i18n": "~1.0.3",
    "grunt-wp-readme-to-markdown": "~2.0.1",
    "gulp": "^4.0.2",
    "gulp-replace": "^1.1.3",
    "node-sass": "^6.0.0",
    "npm-check-updates": "^11.5.13",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "watch": "^0.13.0"
  }
}
