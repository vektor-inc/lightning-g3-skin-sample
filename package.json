{
  "name": "lightning-g3-skin-sample",
  "version": "0.1.0",
  "main": "Gruntfile.js",
  "author": "YOUR NAME HERE",
  "scripts": {
    "start": "grunt default",
    "readme": "grunt readme",
    "i18n": "grunt i18n",
    "all": "run-p watch",
    "sass": "sass --no-source-map _scss/:_scss/",
    "postcss:autoprefix": "npx postcss _scss/*.css --use autoprefixer -r --no-map",
    "postcss:minify": "npx postcss _scss/*.css --use postcss-minify -d css/ --no-map",
    "postcss:all": "npx postcss _scss/*.css --use autoprefixer postcss-minify -d css/ --no-map",
    "rimraf:css": "npx rimraf _scss/*.css",
    "build:css": "run-s sass postcss:all rimraf:css",
    "watch": "nodemon -e scss --watch _scss -x \"npm run build:css\"",
    "copy": "cpx './**/*' ./dist/lightning-g3-skin-sample --include-empty-dirs && cpx './.wp-env.json' ./dist/lightning-g3-skin-sample",
    "clean": "rimraf ./dist/lightning-g3-skin-sample/dist && rimraf ./dist/lightning-g3-skin-sample/node_modules",
    "dist": "run-s copy clean",
    "composer:install:win": "wp-env run composer \"composer install\"",
    "composer:install:mac": "wp-env run composer 'composer install'",
    "phpunit:win": "wp-env run phpunit \"phpunit -c /var/www/html/wp-content/plugins/lightning-g3-pro-unit/phpunit.xml.dist --verbose\"",
    "phpunit:mac": "wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/lightning-g3-pro-unit/phpunit.xml.dist --verbose'"
  },
  "devDependencies": {
    "@wordpress/env": "^4.0.4",
    "autoprefixer": "^10.3.4",
    "cssnano": "^5.0.4",
    "grunt": "~1.4.0",
    "grunt-wp-i18n": "~1.0.3",
    "grunt-wp-readme-to-markdown": "~2.0.1",
    "npm-check-updates": "^11.5.13",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "watch": "^0.13.0",
    "postcss-minify": "^1.1.0",
    "sass": "^1.39.2",
    "cpx": "^1.5.0",
    "nodemon": "^2.0.12",
    "rimraf": "^3.0.2"
  }
}
